#!/usr/bin/env ruby
require "fileutils"
require "semantic_logger"
require_relative "../lib/taskgroups/misc"
require "thor"

SemanticLogger.add_appender(io: $stdout, formatter: :color)
SemanticLogger["main"]

class App < Thor
  desc "misc", "update miscellaneous apps"
  def misc
    Misc.all
  end
end

App.start